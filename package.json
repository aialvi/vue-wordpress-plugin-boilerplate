{
  "name": "aialvi-vue-plugin",
  "version": "1.0.0",
  "description": "A WordPress plugin built using Vue.js",
  "main": "aialvi-vue-plugin.php",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:webpack": "webpack --mode production",
    "watch": "webpack --watch",
    "preview": "vite preview",
    "lint": "npm run lint:js",
    "lint:js": "wp-scripts lint-js src/",
    "lint:js:fix": "wp-scripts lint-js src/ --fix",
    "format": "wp-scripts format \"src/**/*.{js,vue,css,scss,json,md}\"",
    "format:check": "wp-scripts format \"src/**/*.{js,vue,css,scss,json,md}\" --check",
    "lint:fix": "npm run lint:js:fix && npm run format",
    "prepare": "husky"
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/compiler-sfc": "^3.5.21",
    "@wordpress/scripts": "^30.24.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "sass": "^1.93.0",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "unixify": "^1.0.0",
    "vite": "^5.0.0",
    "vue-loader": "^17.4.2",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "eslint-plugin-vue": "^9.28.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "wp-scripts lint-js --fix",
      "wp-scripts format"
    ],
    "*.{json,md}": [
      "wp-scripts format"
    ]
  },
  "author": "Aminul Islam Alvi",
  "license": "MIT"
}
