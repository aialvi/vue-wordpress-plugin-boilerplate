{
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"useTabs": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "avoid",
	"printWidth": 80,
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.vue",
			"options": {
				"parser": "vue"
			}
		},
		{
			"files": "*.json",
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		},
		{
			"files": "*.md",
			"options": {
				"tabWidth": 2,
				"useTabs": false,
				"proseWrap": "always"
			}
		}
	]
}